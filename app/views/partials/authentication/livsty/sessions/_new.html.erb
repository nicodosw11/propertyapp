<div class="container" style="width: 80%;">
  <div class="row">
    <div class="hidden-xs hidden-sm col-md-4 ">
      <div class="left-bar">
        <div class="left-bar-content text-center">
          <%= image_tag("cursor64.png", alt: "Investir", class:"visible-xs") %>
          <%= image_tag("cursor128.png", alt: "Investir", class:"hidden-xs img-rounded") %>
          <h4><%= t('.connexion-title') %></h4>
        </div>
      </div>
    </div>
    <div class="hidden-xs hidden-sm  col-md-1">
    </div>
    <div class="col-sm-12 col-sm-10 col-md-6">
      <h1 class="display-1 text-center greened"><%= t('.my-livsty-account') %></h1>
      <h3 class="display-3 text-center"><%= t('.welcome-back') %></h3>
      <h4 class="display-4 text-muted text-center"> <%= t('.existing-user') %> - <small><%= link_to t(".forgot_your_password"), new_user_password_path %></small></h4>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="col-md-12">
          <%= f.email_field :email,:class => "form-control livsty margin-bottom", :placeholder=>true  %>
          <%= f.password_field :password, autocomplete: "off", :class => "form-control livsty margin-bottom", :placeholder=>true  %>
          <% if devise_mapping.rememberable? %>
            <%= f.check_box :remember_me %> <%= f.label :remember_me %>
          <% end %>
        </div>

        <div class="col-md-12">
          <%= f.button t('.connexion-button'), class: "btn btn-standard", data: {disable_with: t('.signing_in_html')} %>
        </div>
      <% end %>
      <p class="text-center"> <small><%= t('.new-user') %>? <%= link_to t(".sign_up"), new_user_registration_path %></small></p>
    </div>
  </div>
</div>
