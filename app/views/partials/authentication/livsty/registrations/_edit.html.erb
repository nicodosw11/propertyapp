<div class="container">
  <h1><%= t('.my-infos')%></h1>

  <div class="row margin-bottom">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render 'partials/authentication/message' %>

        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: 'form-control livsty margin-bottom' %>

        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: 'form-control livsty margin-bottom' %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control livsty margin-bottom' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control livsty margin-bottom' %>

        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control livsty margin-bottom' %>

        <%= f.button t('.save-changes'), class: "btn btn-standard", data: {disable_with: t('.saving_html')} %>
      <% end %>
    </div>
  </div>
</div>

