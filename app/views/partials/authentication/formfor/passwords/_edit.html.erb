<div class="container" style="width: 80%;">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h2>Change your password</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render 'partials/authentication/message' %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", placeholder: "New Password", class: "form-control" %>
          <em><%= ("#{@minimum_password_length} characters minimum and at least one lowercase letter, one uppercase letter, and one digit" if @minimum_password_length) %></em>
          <!-- <span id='message'></span> -->
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm New Password", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.button "Change my password", class: "btn btn-normal btn-block", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Processing..."} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
