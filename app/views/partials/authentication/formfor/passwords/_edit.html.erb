<div class="container" style="width: 80%;">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h2><%= t('.change_your_password')%></h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render 'partials/authentication/message' %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", placeholder: "#{t('.new_password')}", class: "form-control" %>
          <em>(<%= t'.password_complexity', minimum_password_length: @minimum_password_length if @minimum_password_length %>)</em>
          <!-- <span id='message'></span> -->
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "#{t('.confirm_new_password')}", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.button t('.change_my_password'), class: "btn btn-normal btn-block", data: {disable_with: t('.changing_password_html')} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
