<div class="container" style="width: 80%;">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">

      <h2 class="text-center"><%= t('.forgot_your_password')%></h2>
      <br/>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render 'partials/authentication/message' %>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, placeholder: true, class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.button t('.send_me_reset_password_instructions'), class: "btn btn-normal btn-block", data: {disable_with: t('.sending_instructions_html')} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
