<div class="container" style="width: 80%;">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">

      <h2 class="text-center"><%= t('.sign_in') %></h2>
      <br/>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, placeholder: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", placeholder: true, class: "form-control" %>
        </div>

        <div>
          <% if devise_mapping.rememberable? %>
            <%= f.check_box :remember_me %> <%= f.label :remember_me %>
          <% end %>
          <span class="pull-right">
            <%= link_to t(".forgot_your_password"), new_user_password_path %>
          </span>
          <span class="pull-right">
            <%= link_to t('.resend_confirmation_instructions'), new_user_confirmation_path %>
          </span>
        </div>
        <br/><br/>

        <div class="actions">
          <%= f.button t('.sign_in_button'), class: "btn btn-normal btn-block", data: {disable_with: t('.signing_in_html')} %>
        </div>
      <% end %>

      <hr/>
    </div>
  </div>
</div>
