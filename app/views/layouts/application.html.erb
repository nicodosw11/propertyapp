<!DOCTYPE html>
<html>
  <head>
    <!-- <title><%= @title || "Livsty" %></title> -->
    <title>
      <% if content_for?(:title) %>
        <%= yield(:title) %>
      <% else %>
        Livsty | L'Investissement Immobilier
      <% end %>
    </title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <%= favicon_link_tag 'Livsty' %>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <%= content_tag :body, class: "#{controller.controller_name} #{controller.action_name}", data: { action: action_name, controller: controller_name } do %>
  <!-- <body class="<%= controller.controller_name %> <%= controller.action_name %>"> -->
    <!-- data-spy="scroll" data-target="#navbar" data-offset="100" -->
    <%= render 'shared/message' %>
    <% if content_for? :nav %>
      <%= content_for :nav %>
    <% else %>
      <%= render 'shared/navbar-flex-bootstrap-active' %>
    <% end %>
    <div class="wrapper-for-content">
      <%= yield %>
    </div>
    <!-- <-%= debug(params) if Rails.env.development? %-> -->
    <%= render 'shared/footer-flex' %>
  <% end %>
  <!-- </body> -->
</html>
