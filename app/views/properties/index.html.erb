<header>
  <h2>Properties in the db</h2>
  <ul id="properties of the specific deal">
  <% @properties.each do |property| %>
  <li>Property id #<%= property.id %> - <%= link_to property.full_address, deal_property_path(property.deal, property) %></li>
  <li><%= link_to "Back to Deal #{property.deal.id}", deal_path(property.deal) %></li>
  <% if policy(property).edit? %>
  <li><%= link_to "Edit Property", edit_deal_property_path(property.deal, property) %></li>
  <% end %>
  <% if policy(property).destroy? %>
  <li><%= link_to "Delete Property", deal_property_path(property.deal, property), method: :delete, data: { confirm: "Are you sure you want to delete this property?"} %></li>
  <% end %>
  <br>
  <% end %>
  </ul>
  <ul class="actions">
    <% if policy(@properties).new? %>
    <li><%= link_to "Override Property of this Deal", new_deal_property_path(@deal), class: "new" %></li>
    <% end %>
    <li><%= link_to "Back to deals", deals_path%></li>
  </ul>
</header>


