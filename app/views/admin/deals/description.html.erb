<div class="container" style="width: 80%;">
  <div class="row">
    <div class="col-md-3">
      <%= render 'deal_menu' %>
    </div>
    <div class="col-md-9">
      <div class="panel panel-default">

        <div class="panel-heading">
          Description
        </div>

        <div class="panel-body">
          <div class="container" style="width: 80%;">

            <%= form_for @deal do |f| %>

              <div class="row">
                <div class="form-group">
                  <label>Description du bien</label>
                  <%= f.text_field :amenities_description, placeholder: "Décrire le bien", class: "form-control"%>
                </div>
              </div>

              <div class="row">
                <div class="form-group">
                  <label>Lieu et transports</label>
                  <%= f.text_area :location_transport_description, rows: 5, placeholder: "Décrire la situation géographique du bien et la proximité des transports", class: "form-control"%>
                </div>
              </div>

              <div class="text-center">
                <%= f.submit "Save", class: "btn btn-form" %>
              </div>

            <% end %>

          </div>
        </div>

      </div>
    </div>
  </div>
</div>
