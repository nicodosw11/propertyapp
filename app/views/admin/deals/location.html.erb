<div class="row">
  <div class="col-md-3">
    <%= render 'deal_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        Location
      </div>

      <div class="panel-body">
        <div class="container">

           <%= form_for @deal do |f| %>

            <div class="row">
              <div class="form-group">
                <label>Address</label>
                <%= f.text_field :street, placeholder: "Quelle est l'adresse du bien?", class: "form-control"%>
              </div>
            </div>

            <div class="text-center">
              <%= f.submit "Save", class: "btn btn-form" %>
            </div>

          <% end %>

        </div>
      </div>

    </div>
  </div>
</div>
