<ul class="sidebar-list">
  <li class="sidebar-item">
    <%= link_to "Listing", listing_admin_deal_path, class: "sidebar-link active" %>
    <span class="pull-right text-check-green"><i class="fa fa-check"></i></span>
  </li>
  <li class="sidebar-item">
    <%= link_to "Pricing", pricing_admin_deal_path, class: "sidebar-link active" %>
    <% if !@deal.funding_goal.blank? %>
      <span class="pull-right text-check-green"><i class="fa fa-check"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">
    <%= link_to "Description", description_admin_deal_path, class: "sidebar-link active" %>
    <% if !@deal.amenities_description.blank? %>
      <span class="pull-right text-check-green"><i class="fa fa-check"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">
    <%= link_to "Photos", photo_upload_admin_deal_path, class: "sidebar-link active" %>
    <% if !@deal.amenities_description.blank? %>
      <span id="photo_check" class="pull-right text-check-green"><i class="fa fa-check"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">
    <%= link_to "Location", location_admin_deal_path, class: "sidebar-link active" %>
    <% if !@deal.street.blank? %>
      <span class="pull-right text-check-green"><i class="fa fa-check"></i></span>
    <% end %>
  </li>
</ul>
