<div class="page-header">
  <h1><%= "#{@deal.city}, #{@deal.district}" %></h1>
  <p><%= @deal.occupancy %></p>

  <ul class="actions">
    <% if policy(@deal).update? %>
      <li><%= link_to "Edit Deal",
        edit_deal_path(@deal), class: "edit" %>
      </li>
    <% end %>
    <% admins_only do %>
      <li><%= link_to "Delete Deal",
          admin_deal_path(@deal),
          method: :delete,
          data: { confirm: "Are you sure you want to delete this deal?" },
          class: "delete" %>
      </li>
    <% end %>
  </ul>
</div>
