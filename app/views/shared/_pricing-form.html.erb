<%= form_for @deal do |f| %>
  <div class="row">
    <div class="form-group niagara">
      <label>Funding goal</label>
      <%= f.text_field :funding_goal, placeholder: "eg: 100 000€", class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group niagara">
      <label>Property Value (estimated) </label>
      <%= f.text_field :property_value, placeholder: "eg: 200 000€", class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group niagara">
      <label>Duration</label>
      <%= f.text_field :duration, placeholder: "eg: 14", class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group niagara">
      <label>Interest rate (assumption in %)</label>
      <%= f.text_field :interest_rate, placeholder: "eg: 1.5%", class: "form-control", :value => number_to_percentage(f.object.interest_rate, precision: 2) %>
    </div>
  </div>

  <div class="text-center">
    <%= f.submit "Save", class: "btn btn-form" %>
  </div>
<% end %>
