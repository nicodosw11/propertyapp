<%= link_to deal_path(deal), class: "thumbnail overview-asset" do %>
  <div class="card-livsty">
  <!-- <a href="#" class="thumbnail overview-asset" role="button"> -->
    <div class="row overview-asset-head margined-b-1">
      <div class="col-xs-6 deal-property-address">
        <span class="value address-city">
          <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>
          <%= deal.property.try(:city) %>
        </span>
        <span class="value address-street"><%= deal.property.try(:genre) %></span>
      </div>
      <div class="col-xs-6 deal-property-type">
        <span class="value property-type"><%= deal.property.try(:genre) %></span>
        <span class="value occupation-type"><%= deal.occupancy %></span>
      </div>
    </div>
    <div class="overview-asset-visuel" >
      <div class="overview-asset-visuel-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= deal.image_url %>');">
      </div>
    </div>
    <div class="caption overview-asset-data">
      <div class="row overview-asset-data-investors margined-b-1">
        <div class="col-xs-6 deal-size">
          <dl class="">
            <dd class="deal-size-funded">220.000€</dd>
            <dt class="deal-size-target">de 335.000€</dt>
          </dl>
        </div>
        <div class="col-xs-6 deal-investors">
          <dl class="">
            <dd class="deal-investors-number">50</dd>
            <dt class="deal-investors"> Investisseurs</dt>
          </dl>
        </div>
      </div>
      <div class="overview-asset-data-progress">
        <div class="progress" id="deal-progress-bar">
          <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
          </div>
        </div>
        <div class="row margined-b-1" id="deal-progress-numbers">
          <div class="col-xs-6 deal-progress-pct">
            Financé à 60%.
          </div>
          <div class="col-xs-6 deal-progress-deadline">
            37 jours restants.
          </div>
        </div>
      </div>
      <div class="row overview-asset-data-yield margined-b-1">
        <h3 class="overview-asset-data-yield-title">Performance estimée</h3>
        <div class="col-xs-6" id="deal-expected-return">
          <dd class="deal-expected-return-number">4.5%</dd>
          <dt class="deal-expected-return">Rendement Annualisé</dt>
        </div>
        <div class="col-xs-6" id="deal-expected-maturity">
          <dd class="deal-expected-maturity-number">60 mois</dd>
          <dt class="deal-expected-maturity">Durée Estimée</dt>
        </div>
      </div>
    </div>
  <!-- </a> -->
  </div>
<% end %>

