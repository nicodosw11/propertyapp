    <div class="col-sm-6 col-md-4">

      <!-- <a href="/deal/:id" class="thumbnail overview-asset" role="button"> -->
      <%= link_to deal_path(deal), class: "thumbnail overview-asset" do %>
        <!-- overview-asset-header -->
        <div class="row overview-asset-header">
          <div class="col-xs-6 deal-property-address">
            <span class="value address-city">
              <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> Ville. <%= deal.postcode %> <%= deal.city %>
            </span>
            <span class="value address-street"></span>
          </div>
          <div class="col-xs-6 deal-property-type">
            <span class="value property-type"><%= deal.property_type %></span>
            <span class="value occupation-type"><%= deal.occupancy %></span>
          </div>
        </div>
        <!-- overview-asset-picture -->
        <div class="image overview-asset-image" >
          <div class="overview-asset-image-pic" style="background-image: url('<%= image_path deal.cover_photo(:medium) %>');">
          </div>
        </div>
        <!-- overview-asset-caption -->
        <div class="caption overview-asset-data">
          <div class="row overview-asset-data-investisseurs">
            <div class="col-xs-6 deal-size">
              <dl class="">
                <dd class="deal-size-funded">29.000€</dd>
                <dt class="deal-size-target">de 140.000€</dt>
              </dl>
            </div>
            <div class="col-xs-6 deal-investors">
              <dl class="">
                <dd class="deal-investors-number">7</dd>
                <dt class="deal-investors"> Investisseurs</dt>
              </dl>
            </div>
          </div>
          <div class="overview-asset-data-progress">
            <div class="progress" id="deal-progress-bar">
              <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 21%;">
              </div>
            </div>
            <div class="row" id="deal-progress-numbers">
              <div class="col-xs-6 deal-progress-pct">
                Financé à 21%.
              </div>
              <div class="col-xs-6 deal-progress-deadline">
                87 jours restants.
              </div>
            </div>
          </div>
          <div class="row overview-asset-data-rendement">
            <h3 class="overview-asset-data-rendement-title">Performance estimée</h3>
            <div class="col-xs-6" id="deal-expected-return">
              <dd class="deal-expected-return-number">5.9%</dd>
              <dt class="deal-expected-return">Rendement Annualisé</dt>
            </div>
            <div class="col-xs-6" id="deal-expected-maturity">
              <dd class="deal-expected-maturity-number">168 mois</dd>
              <dt class="deal-expected-maturity">Durée Estimée</dt>
            </div>
          </div>
        </div>
      <% end %>
      <!-- </a> -->
    </div>

