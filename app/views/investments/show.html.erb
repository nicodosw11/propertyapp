<div id="investment">

  <div class="page-header">
    <small><%= @deal.city %></small>
    <small><%= @deal.district %></small>
    <small><%= @deal.property_type %></small>
    <small><%= @deal.occupancy %></small>
  </div>

  <div class="page-header">
    <h2>Transaction nÂ°<%= @investment.id %></h2>
    <ul>
      <li>Price: <%= @investment.price %></li>
      <li>Shares: <%= @investment.shares %></li>
      <li>Total pledged: <%= @investment.pledge_amount %></li>
      <li>User e-mail: <%= @investment.user.email %></li>
      <li>Deal#<%= @investment.deal.id %></li>
    </ul>
    <ul class="actions">
      <% if policy(@investment).update? %>
      <li>
        <%= link_to "Edit Investment", [:edit, @deal, @investment], class: "edit" %>
      </li>
      <% end %>
      <% if policy(@investment).destroy? %>
      <li><%= link_to "Delete Investment", [@deal, @investment], method: :delete, data: { confirm: "Are you sure you want to delete this transaction?"}, class: "delete" %>
      </li>
      <% end %>
    </ul>
  </div>

  <table id="attributes">
    <tr>
      <th>Investor:</th>
      <td><%= @investment.user.email %></td>
    </tr>
    <tr>
      <th>Created:</th>
      <td><%= time_ago_in_words(@investment.created_at) %> ago</td>
    </tr>
  </table>

  <%= simple_format(@investment.description) %>
</div>



