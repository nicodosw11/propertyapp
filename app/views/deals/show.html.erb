<% title(@deal.city, "Deals") %>


<div class="page-header">
  <h1><%= "#{@deal.city}, #{@deal.district}" %></h1>
  <p><%= @deal.occupancy %></p>

  <ul class="actions">
    <li><%= link_to "Edit Deal",
      edit_deal_path(@deal), class: "edit" %></li>
    <% admins_only do %>
      <li><%= link_to "Delete Deal",
          admin_deal_path(@deal),
          method: :delete,
          data: { confirm: "Are you sure you want to delete this deal?" },
          class: "delete" %></li>
    <% end %>
  </ul>
</div>

<%= render "shared/card-property", deal: @deal %>
<%= render 'components/modal-registration2-invest' %>

